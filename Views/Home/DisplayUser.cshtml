@model SleepApp.Models.SaveUserViewModel

<div class="container">
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>UserName</th>
        </tr>
    </thead>

<tbody>
    @foreach(var user in Model.user){
        <tr>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>@user.age</td>
            <td>@user.userName</td>
            <td>
                <!--  Placeholder for edit and delete id thingy -->
                <a href="/Home/EditUser/@user.id" type="submit" class="btn btn-primary">Edit</a>
                <a href="/Home/RemoveUser/@user.id" type="submit" class="btn btn-danger">Delete</a>
            </td>
            </tr>
    }
</tbody>

</table>
</div>